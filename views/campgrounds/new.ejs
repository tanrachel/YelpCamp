<% include ../partials/header %>

<div class = "container">
	<div>
		<h1 style ="text-align:center;"> Create a New Campground </h1>
		<div style = "width:30%; margin: 25px auto;">
			<form action ="/campgrounds" method = "POST">
				<div>
					<div class ="form-group">
						<label>Campground Name</label>
						<input class = "form-control" type="text" name = "campground[name]" placeholder ="name">
					</div>
				 	<div class ="form-group">
						<label>Image Link</label>
						<input class = "form-control" type="text" name = "campground[image]" placeholder = "image url">
					</div>
					<div class ="form-group">
						<label>Campground Price</label>
						<input class = "form-control" type="number" name = "campground[price]" placeholder = "price" min="0.01" step="0.01">
					</div>
					<div class ="form-group">
						<label>Campground Description</label>
						<textarea class = "form-control" type="text" name = "campground[description]" placeholder = "description" rows = "3"></textarea>
					</div>
					<div class ="form-group">
						<button class = "btn btn-primary btn-lg btn-block"> Submit	</button>
					</div>
				</div>
			</form>	
			<a href="/campgrounds">Go Back</a>
		</div>	

	</div>
	
</div>



<% include ../partials/footer%>